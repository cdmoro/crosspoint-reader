{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && concurrently \"npm run build:home\" \"npm run build:settings\" \"npm run build:files\"",
    "build:home": "cross-env PAGE=HomePage vite build --config vite.build.ts",
    "build:settings": "cross-env PAGE=SettingsPage vite build --config vite.build.ts",
    "build:files": "cross-env PAGE=FilesPage vite build --config vite.build.ts",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "lightningcss": "^1.31.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-mock-dev-server": "^2.0.7",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.18"
  }
}
